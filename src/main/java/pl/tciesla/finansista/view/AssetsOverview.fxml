<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.tciesla.finansista.view.AssetsOverviewController">
   <children>
      <VBox layoutX="14.0" layoutY="16.0" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="10.0" prefWidth="580.0" spacing="10.0">
               <children>
                  <Label text="Total assets value" />
                  <Label fx:id="assetsTotalValueLabel" text="value">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="assetTable" prefHeight="139.0" prefWidth="550.0">
              <columns>
                <TableColumn fx:id="assetNameColumn" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="assetValueColumn" prefWidth="75.0" text="Value" />
                  <TableColumn fx:id="assetCategoryColumn" prefWidth="75.0" text="Category" />
                  <TableColumn fx:id="assetShareColumn" prefWidth="75.0" text="Share" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TableView prefHeight="164.0" prefWidth="272.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Category" />
                      <TableColumn prefWidth="75.0" text="Value" />
                        <TableColumn prefWidth="75.0" text="Share" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <PieChart fx:id="categoryPieChart" prefHeight="150.0" prefWidth="298.0" />
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#handleNewButtonClicked" text="New" />
                  <Button mnemonicParsing="false" onAction="#handleEditButtonClicked" text="Edit" />
                  <Button mnemonicParsing="false" onAction="#handleDeleteButtonClicked" text="Delete" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
