      </ButtonBar>
      <Label layoutX="25.0" layoutY="14.0" text="Total assets value" />
      <Label fx:id="assetsTotalValueLabel" layoutX="130.0" layoutY="14.0" text="value">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
