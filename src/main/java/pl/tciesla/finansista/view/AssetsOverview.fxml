<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.tciesla.finansista.view.AssetsOverviewController">
   <children>
      <VBox layoutX="14.0" layoutY="16.0" prefHeight="500.0" prefWidth="700.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="10.0" prefWidth="580.0" spacing="10.0">
               <children>
                  <Label text="Assets value:" />
                  <Label fx:id="assetsValueLabel" text="unknow">
                     <font>
                        <Font name="System Bold Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TableView fx:id="assetsTable" prefHeight="219.0" prefWidth="680.0">
              <columns>
                <TableColumn fx:id="assetNameColumn" prefWidth="75.0" text="Asset" />
                <TableColumn fx:id="assetValueColumn" prefWidth="75.0" text="Value" />
                  <TableColumn fx:id="assetCategoryColumn" prefWidth="75.0" text="Category" />
                  <TableColumn fx:id="assetShareColumn" prefWidth="75.0" text="Share" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="185.0" prefWidth="680.0" spacing="10.0">
               <children>
                  <TableView fx:id="categoriesTable" prefHeight="181.0" prefWidth="277.0">
                    <columns>
                      <TableColumn fx:id="categoryNameColumn" prefWidth="75.0" text="Category" />
                      <TableColumn fx:id="categoryValueColumn" prefWidth="75.0" text="Value" />
                        <TableColumn fx:id="categoryShareColumn" prefWidth="75.0" text="Share" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <PieChart fx:id="categoriesValuePieChart" animated="false" clockwise="false" labelLineLength="10.0" labelsVisible="false" legendSide="LEFT" prefHeight="181.0" prefWidth="393.0" />
               </children>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#handleNewButtonClicked" text="New" />
                  <Button mnemonicParsing="false" onAction="#handleEditButtonClicked" text="Edit" />
                  <Button mnemonicParsing="false" onAction="#handleDeleteButtonClicked" text="Delete" />
              </buttons>
            </ButtonBar>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
